<% layout('layouts/boilerplate')%>

  <div class="col-12 mt-3 mb-3 d-flex justify-content-between">
    <h4 class="text-uppercase"><i class="fas fa-chart-area mr-1"></i>Data Hasil Penilaian</h4>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      <i class="fas fa-table mr-1"></i>
      Data Hasil Perankingan
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-sm table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
          <thead class="table-info">
            <tr>
              <th class="p-3">Rangking</th>
              <th class="p-2">NIK</th>
              <th class="p-2">Nama Lengkap</th>
              <th class="p-2">Nilai Evaluasi</th>
            </tr>
          </thead>
          <tbody>
            <% let nomor=1; for(let skor of skors){ %>
                  <tr class="table-active">
                    <td class="p-2">
                      <%= nomor++ %>
                    </td>
                    <td class="p-2">
                      <%= skor.ktp %>
                    </td>
                    <td class="p-2">
                      <%= skor.nama %>
                    </td>
                    <td class="p-2">
                      <%= skor.bobot_subkriteria %>
                    </td>
                  </tr>
                  <%} %>
          </tbody>
        </table>
      </div>
    </div>
  </div>