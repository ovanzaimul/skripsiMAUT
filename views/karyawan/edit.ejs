<% layout('layouts/boilerplate')%>
  <div class="col-12 mt-3 mb-3 d-flex justify-content-between">
    <h4 class="text-uppercase"><i class="fas fa-users mr-1"></i>Data Karyawan</h4>
    <a href="/karyawan" class="btn btn-secondary"><i class="fas fa-arrow-left mr-1"></i>Kembali</a>
  </div>

  <% for(let karyawan of karyawans){ %>
    <div class="card mb-4 d-flex flex-column justify-content-center">
      <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Edit Data Karyawan
      </div>

      <form class="col-sm-12" method="POST" action="/karyawan/<%=karyawan.id_karyawan%>?_method=PUT">
        <div class="form-group row">
          <label for="inputnama" class="col-sm-2 col-form-label">Nama</label>
          <div class="col-sm-10">
            <input type="text" name="karyawan[nama]" value="<%= karyawan.nama %>" class="form-control" id="inputnama"
              required>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputtgl" class="col-sm-2 col-form-label">Tanggal Lahir</label>
          <div class="col-sm-10">
            <input type="date" name="karyawan[tgllahir]" value="<%= karyawan.tgllahir.toISOString().substr(0, 10) %>"
              class="form-control" id="inputtgl" required>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputnpwp" class="col-sm-2 col-form-label">NPWP</label>
          <div class="col-sm-10">
            <input type="text" name="karyawan[npwp]" value="<%= karyawan.npwp %>" class="form-control" id="inputnpwp" required>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputktp" class="col-sm-2 col-form-label">NIK</label>
          <div class="col-sm-10">
            <input type="text" name="karyawan[ktp]" value="<%= karyawan.ktp %>" class="form-control" id="inputktp" required>
          </div>
        </div>

        <div class="form-group d-flex flex-row-reverse">
          <button class="btn btn-success ml-1"><i class="fas fa-save mr-1"></i>Update</button>
          <button class="btn btn-primary" type="reset" value="reset"><i class="fas fa-sync-alt mr-1"></i>Reset</button>
        </div>

      </form>
      <% } %>
    </div>