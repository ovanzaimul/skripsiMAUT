<% layout('layouts/boilerplate')%>
  <div class="col-12 mt-3 mb-3 d-flex justify-content-between">
    <h4 class="text-uppercase"><i class="fas fa-users mr-1"></i>Data Kriteria</h4>
    <a href="/kriteria" class="btn btn-secondary"><i class="fas fa-arrow-left mr-1"></i>Kembali</a>
  </div>

  <% for(let kriteria of kriterias){ %>
    <div class="card mb-4 d-flex flex-column justify-content-center">
      <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Edit Data Kriteria
      </div>

      <form class="col-sm-12" method="POST" action="/kriteria/<%=kriteria.id_kriteria%>?_method=PUT">
        <div class="form-group row">
          <label for="inputkode" class="col-sm-2 col-form-label">Kode</label>
          <div class="col-sm-10">
            <input type="text" name="kriteria[kode]" value="<%= kriteria.kode %>" class="form-control" id="inputkode">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputnama" class="col-sm-2 col-form-label">Nama Kriteria</label>
          <div class="col-sm-10">
            <input type="text" name="kriteria[nama]" value="<%= kriteria.nama %>" class="form-control" id="inputnama">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputbobot" class="col-sm-2 col-form-label">Bobot</label>
          <div class="col-sm-10">
            <!-- <input type="number" name="kriteria[bobot]" min="0.00" step="0.01" placeholder="0.00" -->
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <div class="input-group-text">%</div>
              </div>
              <input type="number" name="kriteria[bobot]" min="0" step="5" placeholder="0"
                value="<%= kriteria.bobot * 100 %>" class="form-control" id="inputbobot">
            </div>
          </div>
        </div>

        <div class="form-group d-flex flex-row-reverse">
          <button class="btn btn-success ml-1"><i class="fas fa-save mr-1"></i>Update Data</button>
          <button class="btn btn-primary" type="reset" value="reset"><i class="fas fa-sync-alt mr-1"></i>Reset</button>
        </div>

      </form>
      <% } %>
    </div>