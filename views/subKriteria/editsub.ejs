<% layout('layouts/boilerplate')%>
  <div class="col-12 mt-3 mb-3 d-flex justify-content-between">
    <h4 class="text-uppercase"><i class="fas fa-users mr-1"></i>Data Sub Kriteria</h4>
    <a href="/subkriteria/<%= idkriteria %>/sub" class="btn btn-secondary"><i
        class="fas fa-arrow-left mr-1"></i>Kembali</a>
  </div>

  <% for(let subkriteria of subkriterias){ %>
    <div class="card mb-4 d-flex flex-column justify-content-center">
      <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Edit Data Sub Kriteria
      </div>
      <form class="col-sm-12" method="POST"
        action="/subkriteria/<%= idkriteria %>/<%=subkriteria.id_subkriteria%>?_method=PUT">
        <div class="form-group row">
          <label for="inputnama" class="col-sm-2 col-form-label">Nama Sub Kriteria</label>
          <div class="col-sm-10">
            <input type="text" name="subkriteria[nama]" value="<%= subkriteria.nama %>" class="form-control"
              id="inputnama" required>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputbobot" class="col-sm-2 col-form-label">Bobot</label>
          <div class="col-sm-10">
            <input type="number" name="subkriteria[bobot]" min="0" max="5" step="1" placeholder="0"
              value="<%= subkriteria.bobot %>" class="form-control" id="inputbobot" required>
          </div>
        </div>

        <div class="form-group d-flex flex-row-reverse">
          <button class="btn btn-success ml-1"><i class="fas fa-save mr-1"></i>Update Data</button>
          <button class="btn btn-primary" type="reset" value="reset"><i class="fas fa-sync-alt mr-1"></i>Reset</button>
        </div>

      </form>
      <% } %>
    </div>